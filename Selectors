  }

  /* ID Selector */
  #heading {
    color: #333;
    font-size: 24px;
    margin-bottom: 20px;
  }


  [type="text"] {
    width: 100%;
    padding: 10px;
    margin: 8px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  
  a:hover {
    color: #4caf50;
  }
</style>
